<?xml version="1.0"?>
<sdf version="1.7">
  <world name="empty">

    <!-- ===== Core systems (เหมือนเดิม) ===== -->
    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"/>
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"/>
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"/>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"/>

    <!-- ===== Scene tone: สีพื้นหลัง/แสงเงา ===== -->
    <scene>
      <ambient>0.55 0.55 0.58 1</ambient>
      <background>0.82 0.85 0.90 1</background>
      <shadows>true</shadows>
    </scene>

    <!-- ☀️ Sunlight (เงาสวยขึ้นเล็กน้อย) -->
    <light name="sun" type="directional">
      <pose>0 0 60 0 0 0</pose>
      <diffuse>1 1 0.95 1</diffuse>
      <specular>0.4 0.4 0.4 1</specular>
      <direction>-0.35 0.2 -0.9</direction>
      <cast_shadows>true</cast_shadows>
      <attenuation>
        <range>3000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
    </light>

    <!-- 🔆 สปอตไลต์เพดาน (เพิ่มมิติแต่ไม่แยงตา) -->
    <light name="ceiling_spot_center" type="spot">
      <pose>0 0 7 0 1.2 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <cast_shadows>true</cast_shadows>
      <attenuation><range>80</range><constant>0.9</constant><linear>0.02</linear><quadratic>0.002</quadratic></attenuation>
      <spot><inner_angle>0.6</inner_angle><outer_angle>1.0</outer_angle><falloff>0.6</falloff></spot>
    </light>

    <!-- 🌍 Ground Plane (ใหญ่ขึ้น + โทนสนาม) -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry><plane><normal>0 0 1</normal><size>200 200</size></plane></geometry>
          <surface><friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction></surface>
        </collision>
        <visual name="visual">
          <geometry><plane><normal>0 0 1</normal><size>200 200</size></plane></geometry>
          <material>
            <ambient>0.30 0.60 0.30 1</ambient>
            <diffuse>0.40 0.80 0.40 1</diffuse>
            <specular>0.10 0.10 0.10 1</specular>
          </material>
        </visual>

        <!-- เส้นไกด์แนวยาว (visual-only ไม่มี collision) -->
        <visual name="guide_long">
          <pose>0 0 0.02 0 0 0</pose>
          <geometry><box><size>200 0.10 0.01</size></box></geometry>
          <material><diffuse>1.0 1.0 1.0 0.9</diffuse></material>
        </visual>
        <!-- เส้นไกด์แนวขวาง -->
        <visual name="guide_cross">
          <pose>0 0 0.02 0 0 1.5708</pose>
          <geometry><box><size>200 0.10 0.01</size></box></geometry>
          <material><diffuse>1.0 1.0 1.0 0.9</diffuse></material>
        </visual>
        <!-- แท่นสตาร์ท (visual-only) -->
        <visual name="start_pad">
          <pose>0 -5 0.02 0 0 0</pose>
          <geometry><box><size>6 3 0.01</size></box></geometry>
          <material><diffuse>0.2 0.2 0.2 0.9</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- ========== Walls: ขยายเป็น 60x40 m, สูง 3 m ========== -->
    <!-- North wall + windows (windows เป็น visual-only ไม่ชน) -->
    <model name="wall_north">
      <static>true</static>
      <pose>0 20 1.5 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>60 0.30 3.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>60 0.30 3.0</size></box></geometry>
          <material><diffuse>0.90 0.92 0.96 1</diffuse></material></visual>
        <!-- windows -->
        <visual name="win_l"><pose>-15 0 1.6 0 0 0</pose>
          <geometry><box><size>8 0.05 1.2</size></box></geometry>
          <material><ambient>0.6 0.8 1.0 0.35</ambient><diffuse>0.6 0.8 1.0 0.35</diffuse><specular>0.9 0.9 0.9 0.35</specular></material>
          <transparency>0.65</transparency>
        </visual>
        <visual name="win_c"><pose>0 0 1.6 0 0 0</pose>
          <geometry><box><size>12 0.05 1.2</size></box></geometry>
          <material><ambient>0.6 0.8 1.0 0.35</ambient><diffuse>0.6 0.8 1.0 0.35</diffuse><specular>0.9 0.9 0.9 0.35</specular></material>
          <transparency>0.65</transparency>
        </visual>
        <visual name="win_r"><pose>15 0 1.6 0 0 0</pose>
          <geometry><box><size>8 0.05 1.2</size></box></geometry>
          <material><ambient>0.6 0.8 1.0 0.35</ambient><diffuse>0.6 0.8 1.0 0.35</diffuse><specular>0.9 0.9 0.9 0.35</specular></material>
          <transparency>0.65</transparency>
        </visual>
        <!-- บัวผนัง -->
        <visual name="north_base"><pose>0 0 0.10 0 0 0</pose>
          <geometry><box><size>60 0.32 0.20</size></box></geometry>
          <material><diffuse>0.82 0.83 0.86 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- South wall แบ่งสองท่อนเว้น “ประตู” 4 m -->
    <model name="wall_south_left">
      <static>true</static>
      <pose>-17 -20 1.5 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>26 0.30 3.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>26 0.30 3.0</size></box></geometry>
          <material><diffuse>0.90 0.92 0.96 1</diffuse></material></visual>
        <visual name="south_base_l"><pose>0 0 0.10 0 0 0</pose>
          <geometry><box><size>26 0.32 0.20</size></box></geometry>
          <material><diffuse>0.82 0.83 0.86 1</diffuse></material>
        </visual>
      </link>
    </model>
    <model name="wall_south_right">
      <static>true</static>
      <pose>17 -20 1.5 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>26 0.30 3.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>26 0.30 3.0</size></box></geometry>
          <material><diffuse>0.90 0.92 0.96 1</diffuse></material></visual>
        <visual name="south_base_r"><pose>0 0 0.10 0 0 0</pose>
          <geometry><box><size>26 0.32 0.20</size></box></geometry>
          <material><diffuse>0.82 0.83 0.86 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- East / West walls -->
    <model name="wall_east">
      <static>true</static>
      <pose>30 0 1.5 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>0.30 40 3.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>0.30 40 3.0</size></box></geometry>
          <material><diffuse>0.90 0.92 0.96 1</diffuse></material></visual>
        <visual name="east_base"><pose>0 0 0.10 0 0 0</pose>
          <geometry><box><size>0.32 40 0.20</size></box></geometry>
          <material><diffuse>0.82 0.83 0.86 1</diffuse></material>
        </visual>
      </link>
    </model>

    <model name="wall_west">
      <static>true</static>
      <pose>-30 0 1.5 0 0 0</pose>
      <link name="link">
        <collision name="col"><geometry><box><size>0.30 40 3.0</size></box></geometry></collision>
        <visual name="vis"><geometry><box><size>0.30 40 3.0</size></box></geometry>
          <material><diffuse>0.90 0.92 0.96 1</diffuse></material></visual>
        <visual name="west_base"><pose>0 0 0.10 0 0 0</pose>
          <geometry><box><size>0.32 40 0.20</size></box></geometry>
          <material><diffuse>0.82 0.83 0.86 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- ========== Pillars ========== -->
    <!-- 4 ต้นเดิม (ขยับตามสเกลใหม่) -->
    <model name="pillar_ne"><static>true</static><pose> 10  10 1.5 0 0 0</pose>
      <link name="link"><collision name="c"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry>
          <material><diffuse>0.70 0.70 0.75 1</diffuse></material></visual></link>
    </model>
    <model name="pillar_nw"><static>true</static><pose>-10  10 1.5 0 0 0</pose>
      <link name="link"><collision name="c"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry>
          <material><diffuse>0.70 0.70 0.75 1</diffuse></material></visual></link>
    </model>
    <model name="pillar_se"><static>true</static><pose> 10 -10 1.5 0 0 0</pose>
      <link name="link"><collision name="c"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry>
          <material><diffuse>0.70 0.70 0.75 1</diffuse></material></visual></link>
    </model>
    <model name="pillar_sw"><static>true</static><pose>-10 -10 1.5 0 0 0</pose>
      <link name="link"><collision name="c"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.15</radius><length>3.0</length></cylinder></geometry>
          <material><diffuse>0.70 0.70 0.75 1</diffuse></material></visual></link>
    </model>

    <!-- กริดเสา 12 ต้น (x∈{-16,-8,8,16}, y∈{-12,0,12}) -->
    <!-- y = 12 -->
    <model name="pillar_x-16_y12"><static>true</static><pose>-16 12 1.5 0 0 0</pose>
      <link name="link"><collision name="c"><geometry><cylinder><radius>0.12</radius><length>3.0</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.12</radius><length>3.0</length></cylinder></geometry>
          <material><diffuse>0.75 0.75 0.78 1</diffuse></material></visual></link>
    </model>
    <model name="pillar_x-8_y12"><static>true</static><pose>-8 12 1.5 0 0 0</pose>
      <link name="link"><collision name="c"><geometry><cylinder><radius>0.12</radius><length>3.0</length></cylinder></geometry></collision>
        <visual name="v"><geometry><cylinder><radius>0.12</radius><length>3.0</length></cylinder></geometry>
          <material><diffuse>0.75 0.75 0.78 1</diffuse></material></visual></link>
    </model>
